extends ../layout

block content
    br
    
    a(href='/') Volver

    br

    a(href='/bicicletas/create') Nueva Bicicleta
    
    br
    br

    h2 Listado de Bicicletas
    
    br

    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicaci√≥n
                th(scope='col') 
                th(scope='col') 

        tbody
            each bici in bicis
                tr
                    td(scope='row')
                      = bici.code
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td
                        a.btn.btn-secondary(href='bicicletas/' + bici.code + '/update') Editar

                    td
                        form.inline(method='post' action='bicicletas/' + bici.code + '/delete')
                            input(type='hidden' name='id' value=bici.code)
                            button.link-button(type='submit' name='submit_param' value='submit_value' class='btn btn-danger')
                                = "Eliminar"
